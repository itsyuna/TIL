                         return x < y;
                      };
                      
                      let selectionSort = function (arr, compare) {
                         for (let i = 0; i < arr.length; i++) {
                            let k = 1;
                            for (let j = i + 1; j < arr.length; j++) {
                               if (compare(arr[k], arr[j])) k = j;
                            }
                            swap(arr, i, k);
                         }
                      };
                      
                      /* test code */
