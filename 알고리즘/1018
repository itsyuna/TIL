                      /* recursive function */
                      let input = [1, 2, 3, 4];
                      let output = [];
                      let count = 0;
                      
                      function combination(arr, data, s, idx, r) {      â­ ìˆœì—´ê³  ë‹¤ë¥´ê²Œ ë§ì€ ë§¤ê°œë³€ìˆ˜ê°€ í•„ìš”í•˜ë‹¤!
                                                                            data : ouputì´ ì €ì¥ë  ë§¤ê°œë³€ìˆ˜ / s : ìŠ¤íƒ€íŠ¸ ìœ„ì¹˜
                                                                            idx : í˜„ì¬ ìœ„ì¹˜ì— ëŒ€í•œ ì •ë³´ë¥¼ ë„˜ê²¨ì£¼ê¸° ìœ„í•´ì„œ idxë„ ì¶”ê°€ / r : ë‚´ê°€ ë½‘ì•„ì•¼ í•  ê°¯ìˆ˜
                                                                            -> idxê°€ ì´ì „ ìˆœì—´ì—ì„œ for loopì—ì„œì˜ ìŠ¤íƒ€íŒ… í¬ì¸íŠ¸ê°€ ë  ê²ƒì´ë‹¤. 
